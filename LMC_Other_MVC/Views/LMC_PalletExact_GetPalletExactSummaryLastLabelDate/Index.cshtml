@model LMC_Other_InventoryData.DB_Models.LMC_PalletExact_GetPalletExactSummaryLastLabelDate_Model

@{
    ViewData["Title"] = "Last Label Date";
}

<div class="container">

    <h2>Get Last Label Date</h2>

    <form asp-action="Index" method="get">
        <div>
            <label for="productNumber">Product Number:</label>
            <input type="text" id="productNumber" name="productNumber" required />
        </div>

        <div>
            <label for="runStartDate">Run Start Date:</label>
            <input type="date" id="runStartDate" name="runStartDate" required />
        </div>

        <div>
            <label for="runEndDate">Run End Date:</label>
            <input type="date" id="runEndDate" name="runEndDate" required />
        </div>

        <div>
            <button type="submit">Submit</button>
        </div>
    </form>

    @if (Model != null)
    {
        <div>
            <h3>Result:</h3>
            <p>Last Label Date: @Model.LastLabelDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div>
    }


</div>
